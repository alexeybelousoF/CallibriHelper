{
  "manifest_version": 2,
  "name": "Callibri Helper",
  "description": "Помощник менеджера Колибри",
  "version": "1.0.0",
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["jquery-3.5.1.js", "content.js"]
    }
  ],
  "browser_action": {
          "default_icon": "icon.png",
	  "default_popup": "popup.html"
  }
}
